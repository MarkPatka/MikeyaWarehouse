<UserControl x:Class="MikeyaWarehouse.Wpf.Views.Pages.PalletsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MikeyaWarehouse.Wpf.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <StackPanel
            Orientation="Horizontal" 
            DockPanel.Dock="Bottom" 
            Margin="0,0,0,10">
            <Button
                Content="Load Pallets" 
                Padding="10,5" 
                Margin="5"
                Command="{Binding LoadPallets}">
            </Button>
        </StackPanel>

        <DataGrid x:Name="PalltsData"
              Height="auto"
              Margin="5 0"
              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
              ScrollViewer.VerticalScrollBarVisibility="Visible"
              SelectionMode="Single"
              VerticalAlignment="Stretch"
              ClipToBounds="True"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserReorderColumns="False"
              CanUserResizeRows="False"
              CanUserResizeColumns="True"
              Style="{StaticResource MaterialDesignDataGrid}"
              ItemsSource="{Binding Pallets, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              d:ItemsSource="{d:SampleData ItemCount=5}">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Id" 
                                Binding="{Binding Id}"/>
                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Expires Date" 
                                Binding="{Binding Expires, StringFormat='dd.MM.yyyy'}"/>
                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Type" 
                                Binding="{Binding TypeName}"/>
                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Dimensions" 
                                Binding="{Binding Dimensions}"/>
                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Volume" 
                                Binding="{Binding Volume}"/>

                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Weight" 
                                Binding="{Binding Weight}"/>

                <DataGridTextColumn IsReadOnly="True" 
                                Width="*" 
                                Header="Boxes Count" 
                                Binding="{Binding BoxesCount}"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</UserControl>
